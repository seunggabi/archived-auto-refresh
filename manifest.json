{
  "manifest_version": 2,

  "name": "AutoRefresh",
  "description": "auto refresh your URL",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["auto-refresh.js"]
    }
  ],

  "permissions": [
    "tabs",
    "*://*/*",
    "cookies",
    "activeTab",
    "storage"
  ]
}