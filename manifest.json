{
  "manifest_version": 2,

  "name": "AutoRefresh",
  "description": "자동으로 URL 페이지를 새로고침 해줍니다. 횟수와 주기는 ms 단위로 설정이 가능합니다.\nAutomatically refresh the URL page. The number and period can be set in ms units.",
  "version": "2.1",

  "icons": {
    "128": "images/icon.png"
  },

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup/index.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["auto-refresh.js"]
    }
  ],

  "permissions": [
    "tabs",
    "*://*/*",
    "cookies",
    "activeTab",
    "storage"
  ]
}
